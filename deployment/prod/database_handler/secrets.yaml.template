apiVersion: v1
kind: Secret
metadata:
  name: database-secrets
  namespace: production
  labels:
    app: database-handler
    environment: production
type: Opaque
data:
  # Base64 encoded value - you need to replace this with your actual API key
  # To encode: echo -n "your-actual-api-key" | base64
  USER: "REPLACE_WITH_YOUR_BASE64_ENCODED_VALUE"
  PASSWORD: "REPLACE_WITH_YOUR_BASE64_ENCODED_VALUE"
  HOST: "REPLACE_WITH_YOUR_BASE64_ENCODED_VALUE"
  PORT: "REPLACE_WITH_YOUR_BASE64_ENCODED_VALUE"
  DB_NAME: "REPLACE_WITH_YOUR_BASE64_ENCODED_VALUE"
